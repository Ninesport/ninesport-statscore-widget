{
  "name": "ninesport-statscore-widget",
  "private": false,
  "version": "0.0.6",
  "type": "module",
  "description": "A React component to embed Statscore widgets.",
  "main": "./dist/ninesport-statscore-widget.cjs",
  "module": "./dist/ninesport-statscore-widget.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/ninesport-statscore-widget.js",
      "require": "./dist/ninesport-statscore-widget.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Ninesport/ninesport-statscore-widget.git"
  },
  "homepage": "https://github.com/Ninesport/ninesport-statscore-widget#readme",
  "bugs": {
    "url": "https://github.com/Ninesport/ninesport-statscore-widget/issues"
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "test": "vitest",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint  ./src --fix",
    "preview": "vite preview",
    "test-publish": "yarn test && yarn build && yarn publish"
  },
  "peerDependencies": {
    "react": ">=18.0.0 <20.0.0",
    "react-dom": ">=18.0.0 <20.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^14.2.1",
    "@types/node": "^24.6.0",
    "@types/react": "^19.1.16",
    "@types/react-dom": "^19.1.9",
    "@vitejs/plugin-react": "^5.0.4",
    "eslint": "^9.36.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.22",
    "globals": "^16.4.0",
    "jsdom": "^27.1.0",
    "react": "^19.1.16",
    "react-dom": "^19.1.9",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.45.0",
    "vite": "^7.1.7",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^4.0.6"
  }
}
